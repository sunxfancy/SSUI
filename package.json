{
  "name": "ssui",
  "private": true,
  "version": "1.0.0",
  "author": "西风逍遥游 <sunxfancy@gmail.com>",
  "license": "GPL-3.0-only",
  "workspaces": [
    "desktop",
    "frontend/ssui_components",
    "frontend/functional_ui",
    "ssui-vscode",
    "extension_builder"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:desktop\" \"yarn dev:server\" \"yarn dev:functional_ui\"",
    "dev:desktop_ui": "cd desktop && yarn dev",
    "dev:desktop_sb": "cd desktop && yarn storyboard",
    "dev:desktop": "cd desktop && yarn tauri dev",
    "dev:server": "yarn build:functional_ui && node dependencies/venv.cjs fastapi dev server/server.py --port=7422",
    "dev:functional_ui": "cd frontend/functional_ui && yarn dev",
    "dev:components": "cd frontend/ssui_components && yarn dev",
    "build:desktop_ui": "cd desktop && yarn build",
    "build:desktop": "cd desktop && yarn tauri build",
    "build:components": "cd frontend/ssui_components && yarn build",
    "build:functional_ui": "cd frontend/functional_ui && yarn build",
    "build:example": "cd extensions/example && yarn build",
    "ext:package": "concurrently \"yarn ext:package_Image\" \"yarn ext:package_Video\" \"yarn ext:package_Audio\"",
    "ext:package_Image": "cd extensions/Image && ssext package -o ../../desktop/src-tauri/resources/extensions/",
    "ext:package_Video": "cd extensions/Video && ssext package -o ../../desktop/src-tauri/resources/extensions/",
    "ext:package_Audio": "cd extensions/Audio && ssext package -o ../../desktop/src-tauri/resources/extensions/",
    "test_all": "node dependencies/venv.cjs python tests/run_tests.py",
    "test": "node dependencies/venv.cjs python tests/run_tests.py --test",
    "package": "yarn build:components && yarn build:functional_ui && yarn build:desktop_ui",
    "check_deps": "yarn --version && rustc --version && cargo --version",
    "requirements": "node dependencies/combine_requirements.cjs",
    "install-requirements": "node dependencies/venv.cjs uv pip install -r .venv/requirements.txt",
    "update-lock": "node dependencies/update_lock.cjs",
    "update-lock:no-upgrade": "node dependencies/update_lock.cjs --no-upgrade",
    "postinstall": "node dependencies/install.cjs && yarn requirements && yarn install-requirements"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "js-yaml": "^4.1.0",
    "semver": "^7.5.4",
    "ssext-builder": "file:extension_builder"
  }
}
