{
  "name": "ssui",
  "private": true,
  "author": "西风逍遥游 <sunxfancy@gmail.com>",
  "license": "GPL-3.0-or-later",
  "workspaces": [
    "desktop",
    "frontend/ssui_components",
    "frontend/functional_ui",
    "ssui-vscode",
    "extension_builder",
    "extensions/Image"
  ],
  "scripts": {
    "dev:desktop_sb": "cd desktop && yarn storybook",
    "dev:desktop": "yarn build:frontend && cd desktop && yarn tauri dev",
    "dev:server": "yarn build:frontend && node dependencies/venv.cjs python -m server --dev",
    "dev:server:no_build": "node dependencies/venv.cjs python -m server --dev",
    "dev:executor": "node dependencies/venv.cjs python -m ss_executor",
    "dev:functional_ui": "cd frontend/functional_ui && yarn dev",
    "dev:canvas": "cd extensions/Image && yarn dev",
    "dev:vscode": "cd ssui-vscode && yarn watch",
    "build:frontend": "yarn build:components && yarn build:functional_ui",
    "build:desktop_ui": "cd desktop && yarn build",
    "build:desktop": "cd desktop && yarn tauri build",
    "build:desktop:debug": "cd desktop && yarn tauri build --debug",
    "build:components": "cd frontend/ssui_components && yarn build",
    "build:functional_ui": "cd frontend/functional_ui && yarn build",
    "build:example": "cd extensions/example && yarn build",
    "build:extension_builder": "cd extension_builder && yarn build",
    "build:vscode": "cd ssui-vscode && yarn compile",
    "ext:package": "concurrently \"yarn ext:package_Image\" \"yarn ext:package_Video\" \"yarn ext:package_Audio\"",
    "ext:package_Image": "cd extensions/Image && ssext package -o ../../desktop/src-tauri/resources/extensions/",
    "ext:package_Video": "cd extensions/Video && ssext package -o ../../desktop/src-tauri/resources/extensions/",
    "ext:package_Audio": "cd extensions/Audio && ssext package -o ../../desktop/src-tauri/resources/extensions/",
    "test": "node dependencies/venv.cjs python tests/run_tests.py",
    "test_on": "node dependencies/venv.cjs python tests/run_tests.py --test",
    "package": "yarn build:frontend && yarn ext:package && yarn build:desktop",
    "package:debug": "yarn build:frontend && yarn ext:package && yarn build:desktop:debug",
    "package:vscode": "cd ssui-vscode && yarn package",
    "check_deps": "yarn --version && rustc --version && cargo --version",
    "requirements": "node dependencies/combine_requirements.cjs",
    "install-requirements": "node dependencies/install_requirements.cjs",
    "update-lock": "node dependencies/update_lock.cjs",
    "update-lock:no-upgrade": "node dependencies/update_lock.cjs --no-upgrade",
    "postinstall": "node dependencies/install.cjs"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "js-yaml": "^4.1.0",
    "semver": "^7.5.4",
    "ssext-builder": "file:extension_builder"
  }
}
